<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size:'100x100' %>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<% if @user == current_user %>
		<div class="row">
			<%= link_to "", edit_user_registration_path(current_user), class:"btn btn-default glyphicon glyphicon-wrench" %>
		</div>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
			<label>Title</label><br>
			<%= f.text_field :title %><br>
			<label>Opinion</label><br>
			<%= f.text_field :body %><br>
			<button type="submit" class="btn btn-primary">Create Book</button>
		<% end %>
	<% end %>
</div>