<div class="container">
	<div class='row'>
		<%= render 'users/user', user: @user, book: @book %>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<th>
			                    	<%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size:'30x30' %>
								</th>
								<th>
									<%= user.name %>
								</th>
								<th>
									<%= link_to "Show", user_path(user) %>
								</th>
							</tr>
						<% end %>
					</tbody>
				</thead>
			</table>
		</div>
	</div>
</div>