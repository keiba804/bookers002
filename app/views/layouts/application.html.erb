<!DOCTYPE html>
<html>
  <head>
    <title>Bookers002</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar header">
      <div class="container">
        <div class="row">
          <div class='navbar-header'>
            <p>Bookers</p>
          </div>
          <div>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to ' Home', user_path(current_user.id), class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to ' Users', users_path, class:"glyphicon glyphicon-user users" %>
                </li>
                <li class="">
                  <%= link_to ' Books', books_path, class:"glyphicon glyphicon-book books" %>
                </li>
                <li class="">
                  <%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout" %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to " Home", root_path, class:"glyphicon glyphicon-home home" %>
                </li>
                <li class="">
                  <%= link_to " About", home_about_path, class:"glyphicon glyphicon-link home" %>
                </li>
                <li class="">
                  <%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up" %>
                </li>
                <li class="">
                  <%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in login" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <p id="notice">
     <%=  notice %>
    </p>
    <%= yield %>

    <footer>
      <div class="container">
        <div class='col-xs-3 col-xs-offset-9'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
