<div class="container">
	<%= render 'users/user', user: @user, book: @book %>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<th>
								<%= link_to user_path(book.user_id) do %>
			                    	<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size:'30x30' %>
	                    		<% end %>
							</th>
							<th>
								<%= link_to book_path(book.id) do %>
									<%= book.title %>
								<% end %>
							</th>
							<th>
								<%= book.body %>
							</th>
						</tr>
					<% end %>
				</tbody>
			</thead>
		</table>
	</div>
</div>